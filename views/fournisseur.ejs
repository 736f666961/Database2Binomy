<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    </head>
    <body>
      <div class="container mt-4">
        <h1 class="text-center text-muted">Fournisseur Information</h1>
        <!-- For Showing fournisseur -->
        <% for (const fournisseur of fournisseurs){%>
          <div class="container mt-4">
            <table class="table table-striped">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Fournisseur Name</th>
                  <th scope="col">Fournisseur Email</th>
                  <th scope="col">Fournisseur Phone</th>
                  <th scope="col">Fournisseur Address</th>
                </tr>
              </thead>
              <tbody>
                <tr id="second-tr">
                  <th scope="row" id="<%= fournisseur.ID %>"><%= fournisseur.ID %></th>
                  <td><%= fournisseur.name %></td>
                  <td><%= fournisseur.email %></td>
                  <td><%= fournisseur.phone %></td>
                  <td><%= fournisseur.address %></td>
                </tr>
              </tbody>
            </table>
          </div>
        <%}%>

          <!-- Form To Enter the Fournisseur (Supplier) Of Product -->
          <div class="container mt-4 checked">
            <p id="<%= bool %>" style="display: none;"></p>
            <h2 class="text-center text-muted mt-4">Add Fournisseur(Supplier)</h2>
            <form action="/newFournisseur/<%= fournisseurId %>" method="POST">
              <div class="form-group">
                <label for="pictureUrl">Fournisseur Name:</label>
                <input type="text" id="name" class="form-control" placeholder="Enter fournisseur name, Ex: Ahmed" name="name" required>
              </div>

              <div class="form-group">
                <label for="name">Fournisseur Email:</label>
                <input id="email" type="text" class="form-control" placeholder="Enter fournisseur email, Ex: example@gmail.com" name="email" required>
              </div>

              <div class="form-group">
                <label for="name">Fournisseur Phone:</label>
                <input type="text" class="form-control" id="phone" placeholder="Enter fournisseur phone, Ex: 061122334455" name="phone" required>
              </div>

              <div class="form-group">
                <label for="name">Fournisseur Address:</label>
                <input type="text" class="form-control" id="address" placeholder="Enter fournisseur address, Ex: Street 12 calina" name="address" required>
              </div>

              <button type="submit" class="btn btn-default border w-100" id="submit">Add new fournisseur</button>
            </form>
        </div>
      </div>

      <script src="../js/fournisseur.js"></script>
    </body>
</html>