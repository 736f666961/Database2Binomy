<html>
    <head>
        <title>Adding New Products</title>
    </head>
    <body>
            <!-- Adding New Quote -->
            <div class="container mt-4">
                <h2 class="text-center text-muted mt-4">Add New Product</h2>
                <form action="/newCard" method="POST">
                  <div class="form-group">
                    <label for="pictureUrl">Picture Url:</label>
                    <input type="text" class="form-control" placeholder="Enter Picture Url" name="pictureUrl">
                  </div>

                  <div class="form-group">
                    <label for="name">Fullname:</label>
                    <input type="text" class="form-control" placeholder="Enter name" name="fullname">
                  </div>

                  <div class="form-group">
                    <label for="description">Email:</label>
                    <input type="text" class="form-control" placeholder="Enter description" name="email">
                  </div>
                
                  <div class="form-group">
                    <label for="description">Phone:</label>
                    <input type="text" class="form-control" placeholder="Enter description" name="phone">
                  </div>

                  <div class="form-group">
                    <label for="description">Addres:</label>
                    <input type="text" class="form-control" placeholder="Enter description" name="address">
                  </div>

                  <input type="submit" class="btn btn-default border w-100" value="Add new product">
                </form>
            </div>
    </body>
</html>