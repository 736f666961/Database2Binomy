<html>
    <head>
        <title>Adding New Products</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <style>
          .h-400{
            height: 400px;
          }
        </style>
    </head>
    <body>
          <div class="container">
            <div class="row">
                <!-- Reading More New Products From Dtabase -->
                <% for (const product of products){%>
                  <div class="container col-md-4 col-lg-4 mt-4">
                      <!-- <a href="#" class="text-decoration-none"> -->
                        <div class="card h-400">
                            <img class="card-img-top w-100 h-50" src="<%= product.image%>" alt="#">
                            <div class="card-body">
                                <h2 class="card-title text-center text-muted"><%= product.name%>
                                  <span style="font-size: 16px;"><%= product.quantity%> Left</span>
                                </h2>

                                <h2 class="card-title text-center text-muted">
                                  <strong><%= product.price%></strong><span style="font-size: 16px;">Â£</span> 
                                </h2>

                                <div class="row container">
                                    <a href="/editProduct/<%= product.id %>" class="col"><button class="col btn btn-outline-primary p-2">Edit</button></a>
                                    <a href="/delete/<%= product.id %>" class="col"><button class="col btn btn-outline-danger p-2">Delete</button></a>
                                </div>
                              </div>
                        </div>
                      <!-- </a> -->
                    </div>
                <%}%>
            </div>
          </div>

            <!-- Adding New Product -->
            <div class="container mt-4">
                <h2 class="text-center text-muted mt-4">Add New Product</h2>
                <form action="/newProduct/<%= productId %>" method="POST" novalidate>
                  <div class="form-group">
                    <label for="pictureUrl">Product Picture:</label>
                    <input type="text" id="picture" class="form-control" placeholder="Enter Picture of product" name="image" required>
                  </div>

                  <div class="form-group">
                    <label for="name">Product Name:</label>
                    <input id="name" type="text" class="form-control" placeholder="Enter name of product" name="name" required>
                  </div>

                  <div class="form-group">
                    <label for="name">Product Price:</label>
                    <input type="text" class="form-control" id="price" placeholder="Enter the price of product" name="price" required>
                  </div>

                  <div class="form-group">
                    <label for="name">Product Quantity:</label>
                    <input type="text" class="form-control" id="quantity" placeholder="Enter the quantity of product" name="quantity" required>
                  </div>

                  <button type="submit" class="btn btn-default border w-100">Add new product</button>
                </form>
            </div>
            <script src="../js/controller.js"></script>
    </body>
</html>